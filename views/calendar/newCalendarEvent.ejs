      name="apple-mobile-web-app-title"
      content="https://meinorganizer.app"
    />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="application-name" content="MeinOrganizer" />
    <link rel="stylesheet" href="/CSS/style.css" />
    <title>Neuen Kalendereintrag erstellen</title>
  </head>

  <body>
    <div class="main-layout">
      <%- include("../partials/header") %>

      <main>
        <div class="container">
          <!-- flash message -->
          <% if(error && error.length) {%>
          <div class="alert alert-error" role="alert"><%= error %></div>
          <% } else if(success && success.length){ %>
          <div class="alert alert-success" role="alert"><%= success %></div>
          <% } %>

          <div class="card-wrapper medium-dark-wrapper">
            <h1 class="subtitle">Eintrag erstellen</h1>

            <form action="/kalender" method="POST" class="mt-2">
              <fieldset class="mb-1">
                <legend class="bold">Titel:</legend>
                <input
                  type="text"
                  name="title"
                  id="event-title"
                  placeholder="Titel..."
                  class="card-input mb-1"
                  autofocus
                  required
                />
              </fieldset>

              <fieldset class="date-inputs-container mb-1">
                <legend class="bold">Beginn:</legend>
                <input
                  type="date"
                  name="startDate"
                  id="startEventDate"
                  class="inline-input"
                  max="9999-12-31"
                  required
                />
                <input
                  type="time"
                  name="startEventTime"
                  id="startEventTime"
                  class="inline-input mb-1"
                />
              </fieldset>

              <fieldset>
                <legend class="bold">Ende:</legend>
                <input
                  type="date"
                  name="endDate"
                  id="endEventDate"
                  class="inline-input"
                  max="9999-12-31"
                  required
                />
                <input
                  type="time"
                  name="endEventTime"
                  id="endEventTime"
                  class="inline-input"
                />
              </fieldset>

              <label for="yearly">
                <input
                  type="checkbox"
                  name="reccurence"
                  id="yearly"
                  value="yearly"
                />
                J채hrlich
              </label>

              <fieldset class="color-options-wrapper">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="40"
                  height="40"
                  viewBox="0 0 24 24"
                  class="inline-block-svg list-icon"
                  id="list-icon"
                >
                  <path
                    fill="#F9F871"
                    d="M9 10v2H7v-2h2m4 0v2h-2v-2h2m4 0v2h-2v-2h2m2-7a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h1V1h2v2h8V1h2v2h1m0 16V8H5v11h14M9 14v2H7v-2h2m4 0v2h-2v-2h2m4 0v2h-2v-2h2Z"
                  />
                </svg>
                <legend class="mb-1 text-center bold">W채hle eine Farbe:</legend>
                <div class="color-options-color-wrapper">
                  <label class="color-option">
                    <input
                      type="radio"
                      name="color"
                      value="#F9F871"
                      checked
                      hidden
                    />
                    <div class="color-option comp-color-one"></div>
                  </label>
                  <label class="color-option">
                    <input type="radio" name="color" value="#fda76d" hidden />
                    <div class="color-option comp-color-two"></div>
                  </label>
                  <label class="color-option">
                    <input type="radio" name="color" value="#6ae79c" hidden />
                    <div class="color-option comp-color-three"></div>
                  </label>
                  <label class="color-option">
                    <input type="radio" name="color" value="#3a9ddf" hidden />
                    <div class="color-option comp-color-four"></div>
                  </label>
                </div>
              </fieldset>

              <button type="submit" class="rectangle-btn-card submit-btn mb-1">
                <span class="button-text">Speichern</span>
              </button>
              <a href="/kalender" class="rectangle-secondary-btn-card width-100"
                >Abbrechen</a
              >
            </form>
          </div>
        </div>
      </main>

      <%- include("../partials/footer") %>
    </div>

    <script>
      const storedDate = localStorage.getItem("selectedDate");
      const inputStartDate = document.getElementById("startEventDate");
      const inputEndDate = document.getElementById("endEventDate");
      inputStartDate.value = storedDate;
      inputEndDate.value = storedDate;
      localStorage.removeItem("selectedDate");
    </script>
    <script src="../JS/updateSVGColor.js"></script>
    <script src="/JS/loadingSpinner.js"></script>
  </body>
</html>
